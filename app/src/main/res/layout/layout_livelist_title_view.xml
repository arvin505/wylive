<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvHotLivePlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@drawable/live_play_more"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/hot_liveplay"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/hall_title_font_white"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/live_play_dicovery_more"
        android:gravity="center"
        android:paddingRight="12dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:text="@string/more"
        android:textColor="@color/hall_title_more_font_gray"
        android:textSize="@dimen/text_size_12" />
</RelativeLayout>