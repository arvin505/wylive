<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/passwordRlPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="237dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <EditText
                android:id="@+id/passwordEtPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toLeftOf="@id/loginTvPassword"
                android:background="@null"
                android:ellipsize="end"
                android:inputType="textPassword"
                android:hint="@string/please_imput_password"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/text_gray_one"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/loginEtPassword"
                android:layout_marginTop="10dp"
                android:background="@color/line_one" />
        </RelativeLayout>

        <Button
            android:id="@+id/passwordBtComplete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="@drawable/login_button"
            android:gravity="center"
            android:text="@string/complete"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
</RelativeLayout>