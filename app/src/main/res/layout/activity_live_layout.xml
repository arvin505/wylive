<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/live_category_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_include_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.miqtech.wymaster.wylive.widget.pullToRefresh.PullToRefreshRecyclerView xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/prrvLivePlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            ptr:ptrHeaderBackground="@android:color/transparent"
            ptr:ptrMode="both"
            ptr:ptrShowIndicator="false" />

        <include layout="@layout/layout_exception_page" />

    </RelativeLayout>
</LinearLayout>