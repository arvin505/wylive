<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mine_bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_include_header" />

    <TextView
        android:id="@+id/tvPhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="12dp"
        android:text="验证码已发送到138888888888,请注意查看短信,并在下方输入验证码"
        android:textColor="@color/category_item_count"
        android:textSize="@dimen/text_size_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtPhoneNum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_corner_hollow_02"
            android:hint="请输入6位验证码"
            android:inputType="phone"
            android:maxLength="6"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/category_item_count"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="再次获取验证码(60s)"
            android:textColor="@color/bar_text_selected"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>

    <Button
        android:id="@+id/btnBound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:background="@drawable/login_button"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>